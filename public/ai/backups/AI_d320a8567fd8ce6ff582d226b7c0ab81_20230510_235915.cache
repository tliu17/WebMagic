<?php
require_once 'db.php';

function getJobListings()
{
    global $DB;
    $query = "SELECT * FROM job_listings";
    $stmt = $DB->prepare($query);
    $stmt->execute();
    return $stmt->fetchAll(PDO::FETCH_ASSOC);
}

$jobListings = getJobListings();
?>

